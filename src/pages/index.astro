---
import { Button } from "@/components/ui/button";
import {
	Card,
	CardContent,
	CardDescription,
	CardHeader,
	CardTitle,
} from "@/components/ui/card";
import { Input } from "@/components/ui/input";
import { Label } from "@/components/ui/label";
import { Textarea } from "@/components/ui/textarea";
import Layout from "@/layouts/layout.astro";
import {
	ArrowRight,
	CheckCircle,
	CreditCard,
	Database,
	Globe,
	Monitor,
	Shield,
	ShoppingCart,
	Stethoscope,
	Users,
} from "lucide-react";
---

<Layout title="Modern MD - Transforming Local Practices into Nationwide Leaders">
  <main class="min-h-screen bg-gradient-to-b from-sky-50 to-white">
    <!-- Hero Section -->
    <section class="relative px-4 py-20 lg:py-32">
      <div class="container mx-auto max-w-6xl">
        <div class="grid lg:grid-cols-2 gap-12 items-center">
          <div class="space-y-8">
            <div class="space-y-4">
              <h1 class="text-4xl lg:text-6xl font-bold text-slate-900 leading-tight">
                Modern MD: <span class="text-sky-600">Transforming</span> Local Practices into <span class="text-sky-600">Nationwide Leaders</span>
              </h1>
              <p class="text-xl text-slate-600 leading-relaxed">
                We provide tailored software solutions and expert consulting to expand your medical, weight loss, or spa practice across all 50 states.
              </p>
            </div>
            <div class="flex flex-col sm:flex-row gap-4">
              <Button size="lg" className="bg-sky-600 hover:bg-sky-700 text-white px-8 py-4 text-lg">
                Request a Consultation
                <ArrowRight className="ml-2 h-5 w-5" />
              </Button>
              <Button variant="outline" size="lg" className="border-sky-600 text-sky-600 hover:bg-sky-50 px-8 py-4 text-lg">
                Learn More
              </Button>
            </div>
          </div>
          <div class="relative">
            <div class="bg-gradient-to-br from-sky-100 to-sky-200 rounded-3xl p-8 shadow-2xl">
              <div class="grid grid-cols-2 gap-4">
                <div class="bg-white rounded-xl p-4 shadow-lg">
                  <Stethoscope className="h-8 w-8 text-sky-600 mb-2" />
                  <p class="text-sm font-medium text-slate-700">Medical Practices</p>
                </div>
                <div class="bg-white rounded-xl p-4 shadow-lg">
                  <Users className="h-8 w-8 text-sky-600 mb-2" />
                  <p class="text-sm font-medium text-slate-700">Weight Loss Clinics</p>
                </div>
                <div class="bg-white rounded-xl p-4 shadow-lg">
                  <Monitor className="h-8 w-8 text-sky-600 mb-2" />
                  <p class="text-sm font-medium text-slate-700">Spa & Wellness</p>
                </div>
                <div class="bg-white rounded-xl p-4 shadow-lg">
                  <Globe className="h-8 w-8 text-sky-600 mb-2" />
                  <p class="text-sm font-medium text-slate-700">50-State Reach</p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Tailored Approach Section -->
    <section class="px-4 py-20 bg-white">
      <div class="container mx-auto max-w-6xl">
        <div class="text-center mb-16">
          <h2 class="text-3xl lg:text-5xl font-bold text-slate-900 mb-6">
            Customized for Your <span class="text-sky-600">Unique Practice</span>
          </h2>
          <p class="text-xl text-slate-600 max-w-4xl mx-auto leading-relaxed">
            We understand every practice is different. That's why we work closely with you to develop bespoke software and consulting strategies, ensuring a perfect fit for your goals, whether you're a medical office, weight loss clinic, or spa.
          </p>
        </div>
        
        <div class="grid lg:grid-cols-3 gap-8">
          <Card className="border-sky-200 hover:shadow-lg transition-shadow">
            <CardHeader>
              <CheckCircle className="h-12 w-12 text-sky-600 mb-4" />
              <CardTitle className="text-xl text-slate-900">Collaborative Process</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-slate-600">We partner with you every step of the way, understanding your unique challenges and opportunities.</p>
            </CardContent>
          </Card>
          
          <Card className="border-sky-200 hover:shadow-lg transition-shadow">
            <CardHeader>
              <Users className="h-12 w-12 text-sky-600 mb-4" />
              <CardTitle className="text-xl text-slate-900">Diverse Partnerships</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-slate-600">Leveraging our network of provider partnerships to create comprehensive solutions for your practice.</p>
            </CardContent>
          </Card>
          
          <Card className="border-sky-200 hover:shadow-lg transition-shadow">
            <CardHeader>
              <ArrowRight className="h-12 w-12 text-sky-600 mb-4" />
              <CardTitle className="text-xl text-slate-900">Perfect Fit Solutions</CardTitle>
            </CardHeader>
            <CardContent>
              <p class="text-slate-600">No one-size-fits-all approaches. Every solution is crafted specifically for your practice's needs.</p>
            </CardContent>
          </Card>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="px-4 py-20 bg-gradient-to-b from-sky-50 to-white">
      <div class="container mx-auto max-w-6xl">
        <div class="text-center mb-16">
          <h2 class="text-3xl lg:text-5xl font-bold text-slate-900 mb-6">
            Comprehensive Solutions for <span class="text-sky-600">Nationwide Expansion</span>
          </h2>
          <p class="text-xl text-slate-600 max-w-3xl mx-auto">
            Our comprehensive suite of services provides everything you need to scale your practice across all 50 states, all tailored to your specific requirements.
          </p>
        </div>

        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
          <Card className="bg-white border-sky-200 hover:shadow-xl transition-all hover:-translate-y-1">
            <CardHeader>
              <Shield className="h-12 w-12 text-sky-600 mb-4" />
              <CardTitle className="text-xl text-slate-900">HIPAA Compliant EHR</CardTitle>
              <CardDescription className="text-slate-600">
                Secure, streamlined Electronic Health Record systems designed for compliance and efficiency.
              </CardDescription>
            </CardHeader>
          </Card>

          <Card className="bg-white border-sky-200 hover:shadow-xl transition-all hover:-translate-y-1">
            <CardHeader>
              <Database className="h-12 w-12 text-sky-600 mb-4" />
              <CardTitle className="text-xl text-slate-900">Custom Database Solutions</CardTitle>
              <CardDescription className="text-slate-600">
                Scalable and robust databases to manage patient and operational data effectively.
              </CardDescription>
            </CardHeader>
          </Card>

          <Card className="bg-white border-sky-200 hover:shadow-xl transition-all hover:-translate-y-1">
            <CardHeader>
              <Globe className="h-12 w-12 text-sky-600 mb-4" />
              <CardTitle className="text-xl text-slate-900">50-State Clinical Integration</CardTitle>
              <CardDescription className="text-slate-600">
                Seamless integrations with external clinical providers, enabling compliant operations across all U.S. states.
              </CardDescription>
            </CardHeader>
          </Card>

          <Card className="bg-white border-sky-200 hover:shadow-xl transition-all hover:-translate-y-1">
            <CardHeader>
              <CreditCard className="h-12 w-12 text-sky-600 mb-4" />
              <CardTitle className="text-xl text-slate-900">Integrated Payment Processing</CardTitle>
              <CardDescription className="text-slate-600">
                Secure and efficient payment solutions tailored to your practice's needs.
              </CardDescription>
            </CardHeader>
          </Card>

          <Card className="bg-white border-sky-200 hover:shadow-xl transition-all hover:-translate-y-1">
            <CardHeader>
              <Monitor className="h-12 w-12 text-sky-600 mb-4" />
              <CardTitle className="text-xl text-slate-900">Professional Website Development</CardTitle>
              <CardDescription className="text-slate-600">
                Custom-built websites that reflect your brand and engage your target audience.
              </CardDescription>
            </CardHeader>
          </Card>

          <Card className="bg-white border-sky-200 hover:shadow-xl transition-all hover:-translate-y-1">
            <CardHeader>
              <ShoppingCart className="h-12 w-12 text-sky-600 mb-4" />
              <CardTitle className="text-xl text-slate-900">Shopify E-commerce Stores</CardTitle>
              <CardDescription className="text-slate-600">
                Quick-to-launch Shopify e-commerce platforms, perfect for new companies or expanding product lines.
              </CardDescription>
            </CardHeader>
          </Card>
        </div>

        <div class="text-center mt-12">
          <p class="text-lg text-slate-600 italic">
            All services are components of our tailored solutions, designed specifically for your practice's unique needs.
          </p>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="px-4 py-20 bg-slate-900">
      <div class="container mx-auto max-w-4xl">
        <div class="text-center mb-12">
          <h2 class="text-3xl lg:text-5xl font-bold text-white mb-6">
            Ready to Grow Your Practice <span class="text-sky-400">Nationwide?</span>
          </h2>
          <p class="text-xl text-slate-300 leading-relaxed">
            Take the first step towards national reach. Contact us today for a no-obligation consultation and discover how Modern MD can craft the perfect strategy for your success.
          </p>
        </div>

        <Card className="bg-white shadow-2xl">
          <CardHeader>
            <CardTitle className="text-2xl text-center text-slate-900">Request Your Consultation</CardTitle>
            <CardDescription className="text-center text-slate-600">
              Let's discuss how we can help expand your practice nationwide
            </CardDescription>
          </CardHeader>
          <CardContent>
            <form class="space-y-6">
              <div class="grid md:grid-cols-2 gap-4">
                <div class="space-y-2">
                  <Label htmlFor="name">Full Name</Label>
                  <Input id="name" placeholder="Your full name" className="border-slate-300" />
                </div>
                <div class="space-y-2">
                  <Label htmlFor="email">Email Address</Label>
                  <Input id="email" type="email" placeholder="your@email.com" className="border-slate-300" />
                </div>
              </div>
              <div class="space-y-2">
                <Label htmlFor="practice-type">Practice Type</Label>
                <Input id="practice-type" placeholder="e.g., Medical Practice, Weight Loss Clinic, Spa" className="border-slate-300" />
              </div>
              <div class="space-y-2">
                <Label htmlFor="message">Tell us about your needs</Label>
                <Textarea 
                  id="message" 
                  placeholder="Describe your current challenges and expansion goals..."
                  className="border-slate-300 min-h-[120px]"
                />
              </div>
              <Button className="w-full bg-sky-600 hover:bg-sky-700 text-white py-3 text-lg">
                Request Consultation
                <ArrowRight className="ml-2 h-5 w-5" />
              </Button>
            </form>
          </CardContent>
        </Card>
      </div>
    </section>

    <!-- Footer -->
    <footer class="px-4 py-12 bg-slate-800 border-t border-slate-700">
      <div class="container mx-auto max-w-6xl">
        <div class="text-center">
          <h3 class="text-2xl font-bold text-white mb-4">Modern MD</h3>
          <p class="text-slate-400 mb-6">Transforming local practices into nationwide leaders</p>
          <div class="flex justify-center space-x-8 text-slate-400">
            <span>Â© 2025 Modern MD. All rights reserved.</span>
          </div>
        </div>
      </div>
    </footer>
  </main>
</Layout>
